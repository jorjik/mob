<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.5.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>klimat</name>
    <description>
        the application that show prices.
    </description>
    <author email="grandcazino@gmail.com" href="http://2donow.ru">
        Evgeniy Gribkov
    </author>
    
    <content src="login.html" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />

    <icon src="www/res/logo_klimat.png" />

    <allow-navigation href="*" />
    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
    <engine name="android" spec="~6.3.0" />
</widget>
