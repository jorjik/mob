/* DivTable */
.divTable{
	display: table;
	width: 100%;
	}
	.divTableBody {
		display: table-row-group;
		}
		.divTableRow {
			display: table-row;
		}
		.divTableCell, .divTableHead {
			display: table-cell;
			padding: 3px 10px;
		}
			.divTableHeading {
				background-color: #EEE;
				display: table-header-group;
			}
			.divTableHeading {
				font-weight: bold;
			}
			.divTableFoot {
				background-color: #EEE;
				display: table-footer-group;
				font-weight: bold;
			}

